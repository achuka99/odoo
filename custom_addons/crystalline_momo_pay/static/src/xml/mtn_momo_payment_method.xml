<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="point_of_sale.PaymentScreenMethods" t-inherit="point_of_sale.PaymentScreenMethods" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('paymentmethods')]" position="inside">
            <div class="button paymentmethod btn btn-light rounded-0 border-bottom" t-on-click="() => this.momoclick()">
                <div class="payment-method-display d-flex align-items-center flex-grow-1">
                    <div>
                        <img class="payment-method-icon" src="/crystalline_momo_pay/static/src/img/mtn-momo-logo.png" />
                    </div>
                    <span class="payment-name px-2">MTN Momo</span>
                </div>
            </div>
        </xpath>
    </t>
</templates>
