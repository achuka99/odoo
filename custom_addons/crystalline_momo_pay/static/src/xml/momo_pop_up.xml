<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="crystalline_momo_pay.MomoPopup" owl="1">
        <div class="popup">
            <!-- Modal Header -->
            <div class="modal-header justify-content-center">
                <h2 class="modal-title">
                    <t t-esc="props.title"/>
                </h2>
            </div>
            <!-- Modal Body -->
            <div class="modal-body custom-form-view">
                <form>
                    <div class="col d-flex justify-content-between align-items-center p-3">
                        <label class="form-label label" for="customer">Mobile Number</label>
                        <input class="w-75 form-control" name="customer" placeholder="07XXXXXXXX" />
                    </div>
                    
                    <div class="amount-to-pay flex-row">
                        <h4>Customer needs to pay: </h4>
                        <span t-esc="props.amountToPay"/>
                    </div>
                </form>
            </div>
            <!-- Modal Footer -->
            <div class="footer footer-flex modal-footer justify-content-end">
                <div class="button cancel btn btn-lg btn-secondary" t-on-click="cancel">
                    <t t-esc="props.closePopup"/>
                </div>
                <div class="button send-request btn btn-lg btn-primary" t-on-click="props.sendRequest">
                    Send Request
                </div>
            </div>
        </div>
    </t>
</templates>
