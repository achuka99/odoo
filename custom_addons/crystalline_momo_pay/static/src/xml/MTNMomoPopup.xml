<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="crystalline_momo_pay.MTNMomoPopup">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">${props.title}</h5>
                    <button type="button" class="close" t-on-click="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    ${props.body}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" t-on-click="close">Close</button>
                    <button type="button" class="btn btn-primary" t-on-click="confirm">${props.confirmText}</button>
                </div>
            </div>
        </div>
    </t>
</templates>
